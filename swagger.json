{
  "swagger": "2.0",
  "info": {
    "title": "Mercadofarma API",
    "description": "Find the best price for your medicine",
    "contact": {
      "name": "Eddie Daniel Riascos Gomez",
      "email": "eddiedanielriascosgomez@gmail.com"
    },
    "version": "1.0.0"
  },
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "sso-jwt": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/v1/admin/signup": {
      "post": {
        "summary": "Sign up for business.",
        "description": "Sign up for business.",
        "operationId": "signUpAdmin",
        "tags": ["business"],
        "parameters": [
          {
            "name": "SignUpAdminRequest",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/SignUpAdminRequest"
            },
            "description": "SignUpAdminRequest",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
            "description": "Invalid request",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "SignUpAdminRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "password": {
          "type": "string",
          "minLength": 8
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "default": "admin"
        },
        "businessType": {
          "type": "string",
          "enum": ["FARMACIA", "TIENDA_NATURISTA", "TIENDA_COSMETICA", "OTRO"]
        },
        "businessName": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "taxId": {
          "type": "string"
        },
        "sectorId": {
          "type": "string"
        },
        "businessOpeningHours": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/BusinessOpeningHour"
          }
        }
      }
    },
    "BusinessOpeningHour": {
      "properties": {
        "day": {
          "type": "string",
          "enum": [
            "monday",
            "tuesday",
            "wednesday",
            "thursday",
            "friday",
            "saturday",
            "sunday"
          ]
        },
        "startTime": {
          "type": "string"
        },
        "endingTime": {
          "type": "string"
        }
      }
    },
    "Error": {
       "type":"object",
        "properties": {
            "code": {
              "type": "string"
            },
           "message": {
             "type": "string"
           }
        }
      }
    }
  }